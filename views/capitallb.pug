extends index

block main
    ul(style="list-style-type:none;padding:0;")
        each user in users
            li
                a.button.light(href="/user?id=" + user.id, style="color:black;text-decoration:none;display:flex;align-items:center;gap:10px;width:max-content;min-width:120px;")
                    img.avatar(src="/getuseravatar?id=" + user.id, style="height:45px;")
                    span.name= user.name $ ^C
$ cat capitallb.pug
extends index

append header
    title Лидерборд капитала
    style
        include css/ebank.css

block main
    h1.page-header Лидерборд капитала
    .capitallb-wrapper.styled-scroll
        table.ebank-table.capitallb
            tr
                th Место
                th Пользователь
                th Баланс
                th Капитал
            each user, place in lb
                tr
                    td.place
                        if place < 3
                            b= place + 1
                        else
                            span= place + 1
                    td.user
                        img.avatar(src="/getuseravatar?id=" + user.id)
                        a.clean(href="/user?id=" + user.id, class="place"+(place+1))= user.name
                    td.balance
                        span= user.balance + " EBL"
                    td.capital
                        span= user.capital.toFixed(2) + " %"

